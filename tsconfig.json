{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "skipLibCheck": true,
    "strict": false,
    "module": "ESNext",
    "moduleResolution": "bundler", 
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Изменено на false, чтобы разрешить генерацию файлов .d.ts
    "jsx": "react-jsx",
    "types": ["vitest/globals", "node"] // Добавлено "node" для типов
  },
  "include": [
    "src", // Убедитесь, что ваш основной код включен
   // "vite.config.ts" // Убедитесь, что vite.config.ts включен
  ],
  "exclude": ["node_modules"], // Исключение node_modules
  "references": [{ "path": "./tsconfig.node.json" }]
}
